%header.header
  .container
    %nav
      %ul.nav
        %li.nav-item
          = link_to "Home", root_path, class: 'nav-link active'
        %li.nav-item
          = link_to "About", "#", class: 'nav-link active'
        %li.nav-item.d-flex
          = link_to "Log in", "#", class: 'nav-link active'
        = form_tag(items_path, method: :get, class: 'bd-search d-flex') do
          = text_field_tag :search, params[:search], placeholder: "Search...", class: 'form-control ds-input'
          = button_tag(type: 'submit', title: 'Search', class: "btn btn-primary") do
            = fa_icon "search"
          =#%i.fa.fa-search
          =# submit_tag "Search", :name => nil, class: 'btn btn-outline-primary'