<h2>Edit item</h2>

<%= form_for @item do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :ISBN %><br />
    <%= f.text_field :ISBN %>
  </div>

  <div class="field">
    <%= f.label :item_type %><br />
    <%= f.text_field :item_type %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>