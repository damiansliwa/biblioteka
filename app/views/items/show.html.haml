%div
  %p= link_to "Add item", new_item_path
  %p= link_to "Show all items", items_path
%div
  %p
    Name: #{@item.name}
  %p
    Author: #{@item.author}
  %p
    ISBN: #{@item.ISBN}
  %p
    Item type: #{@item.item_type}
  - if @item.cover?
    %p= image_tag @item.cover.thumb.url
    %p= link_to "Edit item", edit_item_path
    / # Shows cover itself
    / <p>Cover: <haml_silent></haml_silent></p>
  - else
    %p This item don't have a cover yet, but you can change it!
    %p= link_to "Edit item", edit_item_path
